<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="fr.eove.android.bluetooth.demo.DeviceListActivity">

    <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ListView
        android:id="@+id/device_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        </ListView>

        <ProgressBar
            android:id="@+id/discovery_progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="87dp"
            android:layout_height="84dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:visibility="invisible" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:padding="@dimen/buttons_padding">

        <Button
            android:id="@+id/start_discovery_button"
            android:layout_gravity="bottom|left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorInactive"
            android:textColor="@android:color/white"
            android:text="@string/start_dis" />

        <Button
            android:id="@+id/stop_discovery_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"
            android:text="@string/stop_dis" />
    </LinearLayout>
</FrameLayout>
</LinearLayout>
